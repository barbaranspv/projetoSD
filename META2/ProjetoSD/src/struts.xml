<?xml version="1.0" encoding="UTF-8"?>

<!-- The core configuration file for the framework is the default (struts.xml) file
and should reside on the classpath of the webapp (generally /WEB-INF/classes). -->

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

  <!-- devMode equals debug information and reload everything for every request -->
  <constant name="struts.devMode" value="true" />
  <constant name="struts.ui.theme" value="simple" />
  <constant name="struts.action.excludePattern" value="/ws/.*"/>
  <package name="projeto" extends="struts-default">
	
	<default-action-ref name="index" />
	
	<global-results>
		<result name="error">/error.jsp</result>
	</global-results>

	<!-- all exceptions not caught by the application will lead to error.jsp -->
	<global-exception-mappings>
		<exception-mapping exception="java.lang.Exception" result="error" />
	</global-exception-mappings>

	<!-- 'index' action leads to the view provided by index.jsp -->
    <action name="index" >
      <result>/index.jsp</result>
    </action>

      <action name="projeto2">
          <result name="success">projeto.jsp</result>
      </action>

      <action name="pesquisar" class="projeto.action.PesquisarAction" method="execute">
          <result>/index.jsp</result>
          <result name="success">/pesquisar.jsp</result>
      </action>

      <action name="traduz" class="projeto.action.TraduzirAction" method="execute">
          <result>/index.jsp</result>
          <result name="success">/traduz.jsp</result>
      </action>

      <action name="adfacebook" class="projeto.action.AdicionarFacebookAction" method="execute">
          <result name="success" type="redirect">
              <param name="location">${authUrl}</param>
              <param name="code">${code}</param>
          </result>

      </action>

      <action name="adfacebook2" class="projeto.action.AdicionarFacebook2Action" method="execute">
          <result name="success">/projeto.jsp</result>
          <result name="error">/login.jsp</result>
      </action>

      <!-- 'login' action calls 'execute' in 'LoginAction' -->
    <action name="login" class="projeto.action.LoginAction" method="execute">
      <result name="success">/projeto.jsp</result>
      <result name="login">/login.jsp</result>
    </action>


  <action name="register" class="projeto.action.RegisterAction" method="execute">
      <result name="success">/projeto.jsp</result>
      <result name="register">/register.jsp</result>
  </action>


  <action name="indexar" class="projeto.action.IndexarAction" method="execute">
      <result name="success">/projeto.jsp</result>
      <result name="indexar">/indexar.jsp</result>
  </action>


  <action name="ligacoes" class="projeto.action.LigacoesAction" method="execute">
      <result name="success">/projeto.jsp</result>
      <result name="ligacoes">/ligacoes.jsp</result>
  </action>

  <action name="paineladmin" class="projeto.action.PainelAction" method="execute">
      <result name="paineladmin">/paineladmin.jsp</result>
      <result name="error">/projeto.jsp</result>
  </action>

  <action name="verpesquisas" class="projeto.action.VerPesquisasAction" method="execute">
      <result name="verpesquisas">/verpesquisas.jsp</result>
      <result name="error">/projeto.jsp</result>
  </action>

  <action name="logout" class="projeto.action.LogoutAction" method="execute">
      <result name="success">/index.jsp</result>
      <result name="error">/error.jsp</result>
  </action>

  <action name="daradmin" class="projeto.action.DarAdminAction" method="execute">
      <result name="success">/projeto.jsp</result>
      <result name="daradmin">/daradmin.jsp</result>
  </action>

  </package>

</struts>